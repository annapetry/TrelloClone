<div class="row board-row">
  <div class="panel panel-default">
    <div class="panel-heading board-title">

      <a href="#/boards/<%= board.id %>">
        <h3
          class="panel-title title">
          <%= board.escape('title') %>
        </h3>
      </a>

      <button
        id="remove-board"
        data-board-id="<%= board.id %>"
        class="btn btn-default glyphicon glyphicon-remove pull-right remove">
      </button>

    </div>
  </div>
</div>
