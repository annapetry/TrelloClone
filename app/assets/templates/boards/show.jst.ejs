<div id="board-show-title">
  <h3
    class="title">
      <%= board.escape('title') %>
  </h3>
  <button
    data-toggle='modal'
    data-target="#deleteBoardModal"
    class="btn btn-default glyphicon glyphicon-remove remove">
  </button>
</div>
<div id="lists"></div>

<div id="list-form"></div>

<!-- Last Chance Modal -->
<div class="modal fade" id="deleteBoardModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">
        <button type="button"
          class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="editPin">Delete this Board?</h4>
      </div> <!-- Close modal header -->

        <div class="modal-body delete-board-form-body">
          <p>Are you sure you want to permanently delete this Board?</p>
        </div> <!-- Close modal body -->

        <div class="modal-footer delete-footer">
            <button
            type="button"
            id="cancel"
            class="btn btn-default"
            data-dismiss="modal">
            Cancel
          </button>
          <button
            type="button"
            id="remove-board"
            class="btn btn-danger red-button">
            Delete Board
          </button>
        </div> <!-- Close modal footer -->
      </form>

    </div> <!-- Close of modal content -->
  </div> <!-- Close of modal dialog -->
</div> <!-- Close of top-level modal div -->
