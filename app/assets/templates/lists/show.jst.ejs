<div class="panel panel-default">
  <div class="panel-heading list-header">
    <h3
      class="panel-title title">
      <%= list.escape('title') %>
    </h3>
    <button
      class="btn btn-default glyphicon glyphicon-remove pull-right remove"
      id="list-modal">
    </button>
  </div>
  <div class="panel-body cards"></div>
  <div class="new-card"></div>
</div>

<!-- Last Chance Modal -->
<div class="modal fade" id="deleteListModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">
        <button type="button"
          class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="editPin">Delete this List?</h4>
      </div> <!-- Close modal header -->

        <div class="modal-body delete-board-form-body">
          <p>Are you sure you want to permanently delete this List?</p>
        </div> <!-- Close modal body -->

        <div class="modal-footer delete-footer">
            <button
            type="button"
            id="cancel"
            class="btn btn-default"
            data-dismiss="modal">
            Cancel
          </button>
          <button
            type="button"
            id="delete-list"
            class="btn btn-danger red-button">
            Delete List
          </button>
        </div> <!-- Close modal footer -->
      </form>

    </div> <!-- Close of modal content -->
  </div> <!-- Close of modal dialog -->
</div> <!-- Close of top-level modal div -->